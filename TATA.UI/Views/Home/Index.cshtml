@model LogResultViewModel
@{
    ViewData["Title"] = "View";
}
<div class="container">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="col-sm-6">
        <h3> Digita la cadena de texto </h3>
    </div>
    <form asp-action="Index" asp-controller="Home" method="post">
        <div class="form-group">
            <div class="col-md-4 mb-3">
                <label asp-for="Sentence" class="control-label"></label>
                <input type="text" asp-for="Sentence" class="form-control" placeholder="Cadena de texto">
                <span asp-validation-for="Sentence" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Agregar">
        </div>
    </form>

    <hr>
    <div class="row justify-content-center">
        @if (Model?.details?.Count() > 0)
        {
            <table class="table table-bordered table-striped" id="Table">
                <thead>
                    <tr>
                        <td>Nombre</td>
                        <td>Cantidad Repetidos</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.details)
                    {
                        <tr>
                            <td>@item.Word</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No se encuentra registros </p>
        }
    </div>
</div>
